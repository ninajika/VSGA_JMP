<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="53dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tv_header"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    app:srcCompat="@drawable/instagram"
                    tools:ignore="ContentDescription,ImageContrastCheck,NestedWeights" />

                <ImageView
                    android:id="@+id/iv_upin"
                    android:layout_width="96dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    app:srcCompat="@drawable/u"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/iv_ipin"
                    android:layout_width="96dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    app:srcCompat="@drawable/i"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_whatsapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FAFAFA"
                    android:padding="10dp"
                    app:srcCompat="@drawable/whatsapp"
                    tools:ignore="ContentDescription,ImageContrastCheck,NestedWeights" />

                <ImageView
                    android:id="@+id/iv_mastodon"
                    android:layout_width="186dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    app:srcCompat="@drawable/mastodon"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/iv_line"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    app:srcCompat="@drawable/line"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <ImageView
                    android:id="@+id/iv_javascript"
                    android:layout_width="136dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    app:srcCompat="@drawable/javascript"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_react"
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    app:srcCompat="@drawable/react"
                    tools:ignore="ContentDescription,ImageContrastCheck,NestedWeights" />

                <ImageView
                    android:id="@+id/iv_twitter"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    app:srcCompat="@drawable/twitter"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <ImageView
                    android:id="@+id/iv_python"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    app:srcCompat="@drawable/python"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/iv_threads"
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    app:srcCompat="@drawable/threads"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_kembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/btn_kembali"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>